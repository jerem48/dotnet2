@model ASP_NET_MVC_1.Models.Employee

@{
    ViewBag.Title = "Employee Details";
}

<h2>Details</h2>
<table style="font-family:Arial"> 
    <tr>
        <td><b>Employee ID :</b></td>
        <td>@Model.EmployeeId</td>
    </tr>
    <tr>
        <td><b>Name :</b></td>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <td><b>Gender :</b></td>
        <td>@Model.Gender</td>
    </tr>
    <tr>
        <td><b>City :</b></td>
        <td>@Model.City</td>
    </tr>
 <tr>
        <td><b>Department :</b></td>
        <td>@Model.DeptId</td>
    </tr>

</table>
@Html.ActionLink("Back to Employee List", "Index", new { departmentId = @Model.DeptId })